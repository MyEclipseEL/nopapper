<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ladybird.hkd.mapper.DeptMapper" >

    <insert id="addDept" parameterType="com.ladybird.hkd.model.pojo.Department">
        INSERT INTO department  VALUES( #{dept_num},#{dept_name})
    </insert>

    <delete id="delDept" parameterType="com.ladybird.hkd.model.pojo.Department">
        DELETE FROM department WHERE dept_num = #{dept_num};
    </delete>

    <update id="updateDept" parameterType="com.ladybird.hkd.model.pojo.Department">
        UPDATE department SET dept_num = #{dept_num},dept_name = #{dept_name} WHERE dept_num = #{dept_num}
    </update>

    <select id="findDept" parameterType="com.ladybird.hkd.model.pojo.Department" resultType="com.ladybird.hkd.model.pojo.Department">
        SELECT * FROM department
        <where>

            <if test="dept_num != null and dept_num != ''">
                and dept_num = #{dept_num}
            </if>
            <if test="dept_name != null and dept_name != ''">
                and dept_name LIKE '%${dept_name}%'
            </if>
        </where>
    </select>

    <select id="findDeptByName" parameterType="java.lang.String" resultType="com.ladybird.hkd.model.pojo.Department">
        SELECT * FROM department where dept_name=#{dept_name}
    </select>
    <select id="findDeptByNum" parameterType="java.lang.String" resultType="com.ladybird.hkd.model.pojo.Department">
        SELECT * FROM department where dept_Num=#{dept_Num}
    </select>
</mapper>