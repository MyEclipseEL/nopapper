<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ladybird.hkd.mapper.CourseMapper" >

    <select id="findNameById" parameterType="Integer" resultType="String">
        SELECT c_name from course WHERE c_id=${c_id}
    </select>

    <insert id="addCourse" parameterType="com.ladybird.hkd.model.pojo.Course">
        INSERT INTO course (c_name)  VALUES( #{c_name})

    </insert>

    <delete id="delCourse" parameterType="Integer">
        DELETE FROM course WHERE c_id = #{c_id}
    </delete>

    <update id="updateCourse" parameterType="com.ladybird.hkd.model.pojo.Course">
        UPDATE course SET c_name = #{c_name} WHERE c_id = #{c_id}
    </update>

    <select id="findCourse" parameterType="com.ladybird.hkd.model.pojo.Course" resultType="com.ladybird.hkd.model.pojo.Course">
        SELECT * FROM course
        <where>

            <if test="c_id != null">
                and c_id = #{c_id}
            </if>
            <if test="c_name != null and c_name != ''">
                and c_name LIKE '%${c_name}%'
            </if>
        </where>
    </select>
    <select id="findCourseByName" parameterType="String" resultType="com.ladybird.hkd.model.pojo.Course">
        SELECT * FROM course where c_name=#{c_name}
    </select>

    <select id="selByTeacher" parameterType="String" resultType="com.ladybird.hkd.model.pojo.Course">
        SELECT * from course WHERE c_id IN (SELECT course FROM teach WHERE teacher=${t_num})
    </select>

</mapper>