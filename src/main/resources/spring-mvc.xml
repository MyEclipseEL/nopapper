    <!-- 转换器配置 -->
    <mvc:default-servlet-handler/>

    <context:component-scan base-package="com.ladybird.hkd"/>
    <context:component-scan base-package="com.ladybird.*.controller,com.ladybird.hkd.swagger"/>
